<div class="row">
  <div class="col-8">
    <div class="card mb-3">
      <%= cl_image_tag @cocktail.photo.key, class:"card-img-top", height: 300, width: 400, crop: :fill %>
      <div class="card-body">
        <h5 class="card-title"><%= @cocktail.name %></h5>
        <% @cocktail.doses.each do |d| %>
          <p class="card-text"><%= d.ingredient.name %> : <%= d.description %></p>
          <p class="card-text"><small class="text-muted"><%= link_to "Remove", dose_path(d), method: :delete %></small></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-4">
    <%= simple_form_for [ @cocktail, @dose ] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "Add dose", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

